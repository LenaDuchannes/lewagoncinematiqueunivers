<h1><%= @character.name %></h1>
<%= cl_image_tag @character.photo, height: 300, width: 400, crop: :fill %>
<p><% @character.superpowers.each do |sp| %></p>
  <p><%= sp.power.name %> | <%= link_to superpower_path(sp), method: :delete, data: {confirm: "Are you sure?"} do %>
  <i class="fas fa-trash-alt"></i> <span>Delete</span>
<% end %> </p>

<% end %>

<%= link_to characters_path do%>
  <i class="fas fa-home"></i> <span>Home</span>
<% end %>

<%= link_to edit_character_path do%>
  <i class="fas fa-pencil-alt"></i> <span>Edit</span>
<% end %>

<%= link_to new_character_superpower_path(@character) do%>
  <i class="fab fa-superpowers"></i> <span>Add a super power</span>
<% end %>
<a href="#" class="btn btn-lg btn-secondary">Learn more</a>
