
  <div class="titles">
    <h1>List of characters:</h1>
    <%= link_to "Create a new character", new_character_path %>
  </div>
  <div class="cards-container">
<div class="d-flex bd-highlight mb-3">
  <% @characters.each do |character| %>
    <div class="card-box p-2 bd-highlight col">
      <div class="cards">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path character.photo, height: 300, width: 400, crop: :fill %>)">
        </div>
          <h2><%= link_to character.name, character_path(character) %></h2>
      </div>
    </div>
  <% end %>
</div>
</div>

